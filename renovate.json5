{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':semanticCommits',
    ':preserveSemverRanges',
  ],
  branchPrefix: 'renovate/',
  additionalBranchPrefix: '{{#if isMajor}}major-{{/if}}',
  reviewersFromCodeOwners: true,
  rangeStrategy: 'pin',
  postUpdateOptions: [
    'pnpmDedupe',
  ],
  rebaseWhen: 'behind-base-branch',
  recreateWhen: 'always',
  timezone: 'Europe/Prague',
  prConcurrentLimit: 10,
  prCreation: 'not-pending',
  prHourlyLimit: 2,
  commitMessagePrefix: 'chore(deps):',
  commitMessageAction: 'update',
  commitMessageTopic: '{{depName}}',
  commitMessageExtra: 'to {{newVersion}}',
  labels: [
    'dependencies',
    'renovate',
  ],
  addLabels: [
    '{{depType}}',
    '{{updateType}}',
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'ðŸ”„ Dependency Updates Dashboard',
  dependencyDashboardAutoclose: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  packageRules: [
    {
      groupName: 'Minor and Patch Development Dependencies',
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      schedule: [
        'after 9am and before 5pm on tuesday',
      ],
      labels: [
        'automerge',
        'dev-deps',
      ],
      prPriority: 5,
    },
    {
      groupName: 'Major Development Dependencies',
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      schedule: [
        'on the first day of the month',
      ],
      labels: [
        'major-update',
        'dev-deps',
        'requires-review',
      ],
      prPriority: 2,
      minimumReleaseAge: '3 days',
    },
    {
      groupName: 'Minor Production Dependencies',
      matchDepTypes: [
        'dependencies',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      automerge: true,
      automergeType: 'pr',
      schedule: [
        'after 9am and before 5pm on tuesday',
      ],
      labels: [
        'automerge',
        'prod-deps',
        'minor-update',
      ],
      prPriority: 4,
    },
    {
      groupName: 'Patch Production Dependencies',
      matchDepTypes: [
        'dependencies',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      automerge: false,
      schedule: [
        'on the first day of the month',
      ],
      labels: [
        'prod-deps',
        'patch-update',
        'requires-review',
      ],
      prPriority: 3,
    },
    {
      groupName: 'Major Production Dependencies',
      matchDepTypes: [
        'dependencies',
      ],
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      schedule: [
        'on the first day of the month',
      ],
      labels: [
        'major-update',
        'prod-deps',
        'breaking-change',
        'requires-review',
      ],
      prPriority: 1,
      minimumReleaseAge: '7 days',
    },
    {
      matchManagers: [
        'github-actions',
      ],
      automerge: true,
      automergeType: 'pr',
      labels: [
        'github-actions',
      ],
    },
    {
      groupName: 'ESLint packages',
      matchPackageNames: [
        '/^eslint/',
        '/^@typescript-eslint//',
      ],
    },
    {
      groupName: 'Test packages',
      matchPackageNames: [
        '/^@testing-library//',
        '/^jest/',
        '/^vitest/',
      ],
    },
  ],
  prBodyTemplate: '{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{footer}}}',
  prBodyColumns: [
    'Package',
    'Type',
    'Update',
    'Change',
    'Pending',
  ],
  prBodyNotes: [
    '{{#if isMajor}}:warning: **This is a major update that may contain breaking changes.**{{/if}}',
  ],
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'before 5am on monday',
    ],
    automerge: true,
    labels: [
      'lock-file-maintenance',
    ],
  },
}
